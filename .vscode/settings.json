{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "Root"
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Python",
          "commands": [
            "cd python"
          ]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "JS",
          "commands": [
            "cd js"
          ]
        }
      ]
    }
  ]
}